@import "./styles/iconfont.wxss";

/* 在微信小程序中，不支持通配符* */
page, view, text, swiper, swiper-item, image, navigator {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* 主题颜色 通过变量来实现 */
/* 
less中存在变量这个知识
原生的css和wxss也是支持变量
*/
page {
  /* 定义主题颜色 */
  --themeColor: #eb4450;
  /* 统一定义字体大小 */
  font-size: 28rpx;
}

image {
  width: 100%;
}
